{
    "manifest_version": 3,
    "name": "YouTube Video Enhancer",
    "version": "1.0",
    "description": "Adds shortcuts, transcript downloads, and video summaries to YouTube.",
    "permissions": ["storage", "scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    }
  }
  